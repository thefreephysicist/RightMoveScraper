<Window x:Class="RightMoveApp.ImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RightMoveApp"

        xmlns:ViewModel="clr-namespace:RightMoveApp.ViewModel"
        mc:Ignorable="d"
        Title="ImageWindow" Height="450" Width="800">
    <Window.DataContext>
        <ViewModel:ImageViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="btnLeft" Grid.Column="0" Grid.Row="0" Content="&lt;"/>
        <Button x:Name="btnRight" Grid.Column="2" Grid.Row="0" Content=">"/>
    </Grid>
</Window>
